# Colors
set     red="%{\033[1;31m%}"
set   green="%{\033[0;32m%}"
set  yellow="%{\033[1;33m%}"
set    blue="%{\033[1;34m%}"
set magenta="%{\033[1;35m%}"
set    cyan="%{\033[1;36m%}"
set   white="%{\033[0;37m%}"
set     end="%{\033[0m%}" # This is needed at the end

# Setting the actual prompt.
set prompt="${green}%n${blue}@%m ${white}%~ ${green}%%${end} "
#set prompt="[${green}%n${blue}@%m ${white}%~ ]${end} "

# Clean up the color
unset red green yellow blue magenta cyan yellow white end

# For Git
alias	co="commit"
alias	lg="log --color --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --"

